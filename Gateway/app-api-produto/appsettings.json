{
  "AppName": "app-api-produto",
  "PathBase": "/app-api-produto",
  "Core_Http_Settings": {
    "GlobalHeaders": [],
    "RetryCount": 3,
    "BaseDelaySeconds": 2,
    "FailureThreshold": 5,
    "DurationOfBreakSeconds": 30
  },
  "ProdutoSettings": {
    "UrlBackend": "http://localhost:5044"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "KafkaSettings": {
    "BootstrapServers": "localhost:9092",
    "Topic": "log-produto-gtw",
    "Enabled": true,
    "LogAutomaticoHttp": true,
    "LogConsole": true,
    "OfuscarCampos": {
      "Request": [
        "senha",
        "password",
        "token"
      ],
      "Response": [
        "senha",
        "password",
        "token"
      ]
    }
  }
}
